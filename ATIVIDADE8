programa
{
	
	funcao inicio()
	{
		inteiro triangulo
		inteiro a, b, c
		escreva("Qual os lados do seu triângulo?(em cm) ")
		leia (a)
		leia (b)
		leia (c)

		se (a+b > c e a+c>b e b+c>a){
			escreva("Esses valores podem formar um triângulo", "\n")
		}

		senao {
			escreva("Esse valores não podem formar um triângulo", "\n")
		}
		
		se (a == b e  b == c){
			escreva("Seu triangulo é equilatero")
		}
		
		senao se ( a == b ou a == c ou b == c){
			escreva("Seu triangulo é isosceles")
		}

		senao {
			escreva ("Esse triangulo é escaleno")
		}
	}
}
